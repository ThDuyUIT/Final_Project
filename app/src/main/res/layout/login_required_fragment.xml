<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myticket.LoginRequiredFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:src="@drawable/user_icon2"
            app:civ_circle_background_color="@color/maincolor1"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/maincolor1"
            android:tint="@color/maincolor2" />   <!-- Tint color -->


        <TextView
            android:theme="@style/edt_view"
            android:layout_marginLeft="@dimen/margin_base0.5"
            android:gravity="center"
            android:paddingTop="@dimen/margin_base"
            android:text="@string/text_login_required1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:theme="@style/edt_view"
            android:layout_marginLeft="@dimen/margin_base"
            android:gravity="center"
            android:paddingTop="@dimen/margin_base"
            android:text="@string/text_login_required2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:textSize="@dimen/text_content_size"
            android:textColor="@color/maincolor2"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/maincolor1"
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_base"
            android:text="@string/button_login"/>



    </LinearLayout>

</FrameLayout>