<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/maincolor1">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:padding="10dp"
            app:tint="@color/maincolor2" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ho Chi Minh - Ca Mau"
                android:textColor="@color/maincolor2"
                android:textSize="@dimen/text_content_size"/>

            <TextView
                android:id="@+id/textviewDepartureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CN, 30/4/1975"
                android:textColor="@color/maincolor2"
                android:textSize="@dimen/text_note_size"/>

        </LinearLayout>

    </LinearLayout>

<!--    <ListView-->
<!--        android:id="@+id/listviewTicket"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/margin_base0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleviewTicket"
        android:clipToPadding="false"
        android:orientation="vertical"
        />

</LinearLayout>
