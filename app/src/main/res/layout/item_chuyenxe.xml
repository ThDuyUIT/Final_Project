<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_small_cardview"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/margin_base"
    app:cardCornerRadius="@dimen/basic_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/heigh_imgCardview"
            android:scaleType="centerCrop"
            android:src="@drawable/vinh_long"
            android:id="@+id/imageviewChuyenXe"/>

        <TextView
            android:layout_marginTop="@dimen/distance_text_img"
            android:layout_marginLeft="@dimen/distance_text_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tp.HCM - Vĩnh Long"
            android:textSize="@dimen/text_note_size"
            android:id="@+id/textviewChuyenXe"/>

        <TextView
            android:layout_marginLeft="@dimen/distance_text_img"
            android:layout_marginBottom="@dimen/distance_text_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="120.000đ"
            android:id="@+id/textviewGiaChuyenXe"
            android:textSize="@dimen/text_note_size"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
